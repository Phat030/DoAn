@model IEnumerable<Shop.Models.Product>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutCus.cshtml";
}

<body>
    
    <!-- Product section -->
    <section id="products" class="products py-5">
        <div class="container">
            <!-- section title -->
            <div class="row">
                <div class="col-10 mx-auto col-sm-6 text-center">
                    <h1 class="text-capitalize product-title">New Products</h1>
                </div>
            </div>
            <!-- end section title -->
            <div style="text-align:center">
                @using (Html.BeginForm("Search", "Home"))
                {
                    <b>Search by: </b>@Html.RadioButton("searchBy", "NameProduct")<text>Name Product</text>
                    @Html.RadioButton("searchBy", "Available")<text>Available</text>
                    @Html.RadioButton("searchBy", "None", true)<text>None</text><br />
                    @Html.TextBox("search")<input type="submit" value="Search" />
                }
            </div>
            <!-- Product items -->
            <div class="row product-items" id="product-items">
                <!-- single items -->
                @foreach (var item in Model)
                {
                    <div class="col-10 col-sm-6 col-lg-4 mx-auto my-3">
                        <div class="card single-item">
                            <a href="/Product/Details/@item.IDProduct">
                                <div class="img-container">
                                    <img src="@Url.Content(item.Image)" class="card-img-top product-img" alt="">
                                </div>
                            </a>
                            <div class="card-body">
                                <div class="card-text d-flex justify-content-between text-capitalize">
                                    <h5 id="item-name">@Html.DisplayFor(model => item.NameProduct)</h5>
                                    <span><i class="fas fa-dollar-sign"></i>@Html.DisplayFor(model => item.UnitPrice)</span>
                                </div>
                                <a href="/ShoppingCart/AddtoCart/@item.IDProduct" class="btn btn-primary">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                }
                <!-- end of single item -->
            </div>
            <!-- end of store items -->
        </div>
    </section>
    <!-- end of store section -->
    <!---End of Product Section===-->
    
</body>

